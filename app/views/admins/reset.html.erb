<legend>Edit Password</legend>
<%= form_for(@admin, :url => update_password_admins_path , :method => :put, :html => {:class => "form-horizontal"} ) do |f|%>
	<%= render :partial => "shared/errors", :locals => { :obj => @admin } %>
	<div class="control-group">
		<%= f.label :password, "Password *", :class => "control-label" %> 
		<div class="controls">
			<%= f.password_field :password %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :password_confirmation, "Retype Password *", :class => "control-label" %> 
		<div class="controls">
			<%= f.password_field :password_confirmation %>
		</div>
	</div>
	
	<div class="control-group">
		<div class="controls">
			<%= f.submit "Update Password", :class => "btn" %>
		</div>
	</div>
<% end %>

