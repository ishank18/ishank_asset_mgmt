<legend><small>Employee</small> &nbsp;<%= @employee.name %></legend>

<table class="table">
	<tr>
		<td width="200px;">EmployeeId</td>
		<td><%= @employee.employee_id %></td>
	</tr>
	<tr >
		<td>Name</td>
		<td><%= @employee.name %></td>
	</tr>
	<tr>
		<td>E- Mail</td>
		<td><%= @employee.email %></td>
	</tr>
	<tr>
		<td>Actions</td>
		<td>
			<%= show_disable_option @employee %> &nbsp;
			<%= (link_to 'Edit', edit_employee_path(@employee), :class => "btn") unless @employee.deleted? %> &nbsp;
			<%= (link_to "History", histories_path(:type => "employee", :id => @employee.id), :class => "btn btn-info") unless(@employee.assignments.blank?) %> &nbsp;
			<%= link_to 'Return Asset', return_asset_path(:type => "employee", :id => @employee.id) if @employee.assignments.collect { |assignment| (!assignment.date_returned?) }.any? %>
		</td>
	</tr>
</table>