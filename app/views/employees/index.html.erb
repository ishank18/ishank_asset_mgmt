<h2 align='center'>All Employees</h2>

<table width="800" class="ShowTable" align='center'>
	<tr>
		<th>Employee Id</th>
		<th>Name</th>
		<th>Email</th>
		<th>Action</th>
	</tr>
	<% @employees.each do |emp| %>
	<tr>
		<td><%= emp.company_id %></td>
		<td><%= link_to emp.name, emp %></td>
		<td><%= emp.email %></td>
		<td><%= link_to 'Edit', edit_employee_path(emp.id.to_s) %></td>
	</tr>
	<% end %>
</table>

<script>
	$(".ShowTable tr:odd").addClass("AlternateRow");
</script>
