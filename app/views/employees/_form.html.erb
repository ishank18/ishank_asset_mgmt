<%= form_for(@employee) do |f| %>

	
<%= render :partial => "shared/errors", :locals => { :obj => @employee } %>

<table id='assetTable' width="800" class="ShowTable" align='center'>

	<tr>
		<td><label>Employee Id</label></td>
		<td><%= f.text_field :company_id %></td>
	</tr>

	<tr>
		<td><%= f.label :name %></td>
		<td><%= f.text_field :name %></td>
	</tr>
	
	<tr>
		<td><%= f.label :email %></td>
		<td><%= f.email_field :email %></td>
	</tr>
	
	<tr>
		<td></td>
		<td><%= f.submit "Add Employee!" %></td>
	</tr>
	
	
</table>
<% end %>


<script>
	$(".ShowTable tr:even").addClass("AlternateRow");
</script>
