<table>
	<tr>
		<td>Operating System</td>
		<td>
			<%= text_field_tag "resource[operating_system]", @asset.try(:resource).try(:operating_system) %>
		</td>
	</tr>
	<tr>
		<td>Has Bag</td>
		<td>
			<% if !@asset.nil? %>
				<%= check_box_tag "resource[has_bag]", "has_bag", @asset.resource.has_bag %>
			<% else %>
				<%= check_box_tag "resource[has_bag]" %>
			<% end %>	
		</td>
	</tr>
</table>	

