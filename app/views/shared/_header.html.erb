<div class="row">
	<% if admin_signed_in? %>
	<div class="span5"><h3>Asset Management</h3></div>
	<div class="span7">
		<div class="btn-group user_actions">
			<%= link_to 'Search', search_path, :class => "btn btn-mini btn-info" %>
			<%= link_to 'Edit Password', password_reset_admins_path, :class => "btn btn-mini" %>
			<%= link_to 'Sign Out', destroy_admin_session_path, :method => :delete, :class => "btn btn-mini" %>
		</div>
	</div>
</div>
<div class="row">	
	<div class="span12">
		<div class="navbar">
			<div class="navbar-inner">
				<ul class="nav">
					<li class="<%= class_name("home", "index") %>"><%= link_to 'Home', root_path %></li>
					<li class="<%= class_name("assets", "index") %> dropdown">
						<%= link_to 'Assets <b class="caret"></b>'.html_safe, "#", :class => "dropdown-toggle", "data-toggle" => "dropdown", :role => "button", :id => "asset" %>
						<ul class="dropdown-menu" aria-labelledby="asset" role="menu">
							<li><%= link_to "All", assets_path %></li>
							<% CATEGORY.each do |category| %>
								<li><%= link_to category[0].pluralize, polymorphic_path(category[1].constantize) %></li>
							<% end %>
						</ul>
					</li>
					<li class="<%= class_name("employees", "index") %>"><%= link_to 'Employees', employees_path %></li>
					<li class="<%= class_name("assets", "new") %>"><%= link_to 'Add new assets', new_asset_path %></li>
					<li class="<%= class_name("employees", "new") %>"><%= link_to 'Add new Employee', new_employee_path %></li>
					<li class="<%= class_name("assignments", "new") %>"><%= link_to 'Assign asset', new_assignment_path %></li>
					
				</ul>	
			</div>
		</div>	
	</div>
	<% end %>
</div>