<script>
function showTag(tag_id) {
	$.ajax({
    url: '<%= show_tag_path %>', 
    dataType: 'script',
    type: 'get', 
    beforeSend: function() { showProgress() },
    complete: function() { endProgress() },
    data: 'tag_id='+tag_id
  });
}
</script>
