$("#assignment_type").html("<%= escape_javascript(@assignment.expected_return_date? ? 'Temporary' : 'Permanent') %>")
$("#issued_on").html("<%= escape_javascript(date_to_string @assignment.date_issued) %>")
$("#scheduled_date").html("<%= escape_javascript(%{ Original Return Date : <b>#{date_to_string @assignment.expected_return_date}</b>}.html_safe) if @assignment.expected_return_date? %>")
$("#assignment_remark").attr("value", "<%= escape_javascript(@assignment.remark) %>")
$('form').attr("action", "<%= assignment_path(@assignment) %>")
